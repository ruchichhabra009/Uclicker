<!doctype html>

<html>

<head>
  <!-- include header partial-->
  <% include ./partials/frontend/head.ejs %>
</head>

<body class="loginbody">
  <div id="wrap">
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <!-- include logo partial-->
        <% include ./partials/frontend/logo.ejs %>   
        <!-- Nav bar -->     
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="passive">
              <a href="/">Home</a>
            </li>
            <li class="passive">
              <a href="#about">About</a>
            </li>
            <li class="passive">
              <a href="#contact">Contact</a>
            </li>
          </ul>
        </div>
        <!-- Nav bar end-->
      </div>
    </div>
    <!--Sign up form-->
    <div class="panel-body">
      <div class="task-content">
        <form class="form-horizontal" action="/signup" method="post" name="myForm">
          <fieldset>
            <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-5 col-md-pull-2 col-lg-4 col-lg-offset-6 col-lg-pull-2">
              <legend>Sign Up</legend>
            </div>
            <div class="form-group">
              <div class="col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
               <% if (message.length > 0) { %>
               <div class="alert alert-danger"><%= message %></div>
               <% } %>
             </div>
           </div>
           <div class="form-group">
            <div class="col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <input type="text" class="form-control" name="fname" id ="fname" placeholder="First Name" onblur ="checkEmptyFname(); return false;" >
              <span id="emptyFname" class="emptyFname"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <input type="text" class="form-control" name ="lname" id ="lname" placeholder="Last Name" onblur ="checkEmptyLname(); return false;"> 
              <span id="emptyLname" class="emptyLname"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <input type="text" class="form-control" name="email" id="inputEmail" placeholder="Email" onblur ="checkEmptyEmail(); return false;">
              <span id="emptyEmail" class="emptyEmail"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <input type="password" class="form-control" name="password"  id ="password" placeholder="Password" onblur ="checkEmptyPassword(); return false;">
              <span id="emptyPassword" class="emptyPassword"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <input type="password" class="form-control" name="cpassword"  id ="cpassword" placeholder="Confirm Password" onkeyup="checkPass(); return false;" >
              <span id="confirmMessage" class="confirmMessage"></span>

            </div>
          </div>
          
          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <button class="btn btn-block btn-primary" type="submit">Sign Up</button>
            </div>
            
          </div>

          <div class="form-group">
            <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
              <p>Already have an account? <a href="/login">Sign In</a></p>
              <p>Or go <a href="/">home</a>.</p>
            </div>
            
          </div>
        </fieldset>

      </form>
    </div>
  </div>

  <!-- Login form end-->
</div>
<!-- page wrapper end -->

<script>
//Form validation
function checkEmptyFname()
{
  var goodColor = "#dce4ec";
  var badColor = "#ff6666";
  var emptyFname = document.getElementById('fname');
  
  var messageFname = document.getElementById('emptyFname');
  if(emptyFname.value==null || emptyFname.value == "")
  {
    emptyFname.style.borderColor = badColor;
    messageFname.style.color = badColor;
    messageFname.innerHTML = "First name empty!"
  }else
  {
    emptyFname.style.borderColor = goodColor;
    messageFname.innerHTML = ""
  }
}

function checkEmptyLname()
{
  var goodColor = "#dce4ec";
  var badColor = "#ff6666";
  var emptyLname = document.getElementById('lname');
  var messageLname = document.getElementById('emptyLname');
  if(emptyLname.value==null || emptyLname.value == "")
  {
    emptyLname.style.borderColor = badColor;
    messageLname.style.color = badColor;
    messageLname.innerHTML = "Last name empty!"
  }else
  {
   emptyLname.style.borderColor = goodColor;
   
   messageLname.innerHTML = ""
 }

}
function checkEmptyEmail()
{
  var goodColor = "#dce4ec";
  var badColor = "#ff6666";
  var emptyEmail = document.getElementById('inputEmail');
  var messageEmail = document.getElementById('emptyEmail');
  if(emptyEmail.value==null || emptyEmail.value == "")
  {
    emptyEmail.style.borderColor = badColor;
    messageEmail.style.color = badColor;
    messageEmail.innerHTML = "Email name empty!"
  }
  else
  {
   emptyEmail.style.borderColor = goodColor;
   
   messageEmail.innerHTML = ""
 }
 
}
function checkEmptyPassword()
{
  var goodColor = "#dce4ec";
  var badColor = "#ff6666";
  var emptyPassword = document.getElementById('password');
  var messagePassword = document.getElementById('emptyPassword');
  if(emptyPassword.value==null || emptyPassword.value == "")
  {
    emptyPassword.style.borderColor = badColor;
    messagePassword.style.color = badColor;
    messagePassword.innerHTML = " Password field empty!"
  }else
  {
   emptyPassword.style.borderColor = goodColor;
   
   messagePassword.innerHTML = ""
 }
}
function checkPass()
{
  var goodColor = "#dce4ec";
  var badColor = "#ff6666";
  var pass1 = document.getElementById('password');
  var pass2 = document.getElementById('cpassword');
  var message1 = document.getElementById('confirmMessage'); 
  if(pass1.value == pass2.value)
  {
    pass2.style.borderColor = goodColor;
    message1.innerHTML = " "
  }
  else if(pass1.value != pass2.value)
  {
    pass2.style.borderColor = badColor;
    message1.style.color = badColor;
    message1.innerHTML = "password does not match!"
  }
  else
  {
    pass2.style.borderColor = goodColor;
    message1.innerHTML = ""
  }
}
</script>


</body>

</html>
''